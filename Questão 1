#include <stdio.h>

int main() {
    int num, i, flag = 0;
    
    printf("Digite um número inteiro positivo: ");
    scanf("%d", &num);
    
    // Verifica se o número é divisível por algum número entre 2 e num/2
    for (i = 2; i <= num/2; i++) {
        if (num % i == 0) {
            flag = 1;
            break;
        }
    }
    
    if (flag == 0)
        printf("%d é um número primo.", num);
    else
        printf("%d não é um número primo.", num);
    
    return 0;
}
